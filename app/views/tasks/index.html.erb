<% check = 'completed' %>
<h1>My tasks</h1>
<ul>
<% @tasks.each do |task| %>
<li>
<% if task.completed == true %>
<span> <%= check %> </span>
<% end %>
<%= link_to task.title, task_path(task) %>
<%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</li>
<% end %>
</ul>
<%= link_to 'Add a new task', 'tasks/new' %>
